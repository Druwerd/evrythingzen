<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :provider %><br>
    <%= f.text_field :provider, {:readonly => true, :class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :uid %><br>
    <%= f.text_field :uid, {:readonly => true, :class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, {:readonly => true, :class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :oauth_token %><br>
    <%= f.text_field :oauth_token, {:readonly => true, :class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :oauth_expires_at %><br>
    <%= f.text_field :oauth_expires_at, {:readonly => true, :class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :role %><br>
    <%= f.select :role, User.roles.keys.to_a, {}, {:class => "form-control"} %>
  </div>
  <div class="actions form-group">
    <%= f.submit nil, {:class => "btn btn-default"} %>
  </div>
<% end %>
