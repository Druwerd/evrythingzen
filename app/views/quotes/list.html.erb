<main id="top" class="masthead" role="main">
  <div class="container admin">

<h1>Listing quotes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Source</th>
      <th>Source link</th>
      <th>Zen link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.text %></td>
        <td><%= quote.source %></td>
        <td><%= quote.source_link %></td>
        <td><%= quote.zen_link %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>

  </div><! --/container -->
</main><! --/main -->